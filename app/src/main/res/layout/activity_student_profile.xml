<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".StudentProfile">

    <include
        android:id="@+id/studentProfile_toolbarId"
        layout="@layout/app_bar_layout"
        ></include>


    <ScrollView
        android:id="@+id/studentProfile_ScrollId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/studentProfile_toolbarId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/studentProfileLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_layout_style"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/studentProfile_ImageStudentId"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/avatar"
                    app:civ_border_color="#B3B3B3"
                    app:civ_border_width="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/studentProfile_FullNameHintId"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/custom_full_name_icon"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Name: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_FullNameId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Full Name"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/studentProfile_IDHintId"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/custom_id_icon"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" ID: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_IDId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="ID"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/dept"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Dept.: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_DeptId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Dept"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/custom_batch_icon"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Batch: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_BatchId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Batch"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/studentProfile_SessionHintId"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/custom_session_icon"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Session: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_SessionId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Session"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/full_name"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Type: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_RegularId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Regular"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/custom_phone_no_icon"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Phone No.: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_PhoneNoId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Phone No."
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/custom_guardian_phone_no_icon"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Guardian\n Phone No.: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_GuardPhoneNoId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="G.Phone No."
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/custom_address_icon"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Address:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_AddressId"
                        android:layout_width="100dp"
                        android:layout_height="65dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:drawableStart="@drawable/custom_email_icon"
                        android:gravity="center|left"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text=" Email: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/studentProfile_EmailId"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/studentProfile_ButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/nunito"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/studentProfile_DeleteButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/nunito"
                    android:visibility="invisible"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button_reject"
                    android:text="Delete Account"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</RelativeLayout>