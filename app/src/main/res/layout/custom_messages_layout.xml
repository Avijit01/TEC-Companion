<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_imageId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/receiver_messages_textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/message_profile_imageId"
        android:text="receiver messages here"
        android:background="@drawable/receiver_messages_layout"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/sender_messages_ImageId"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/receiver_messages_ImageId"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/sender_messages_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/sender_messages_layout"
            android:fontFamily="@font/nunito"
            android:padding="10dp"
            android:text="sender messages here"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>