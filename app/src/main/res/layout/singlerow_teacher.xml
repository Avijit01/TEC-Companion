<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="5dp"
android:elevation="5dp"
app:cardUseCompatPadding="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/singleRowTeacher_ImageId"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/avatar"
        android:layout_centerVertical="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        />

    <TextView
        android:id="@+id/singleRowTeacher_FullNameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_toRightOf="@id/singleRowTeacher_ImageId"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/singleRowTeacher_Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_toRightOf="@id/singleRowTeacher_ImageId"
        android:layout_below="@id/singleRowTeacher_FullNameId"
        android:layout_marginLeft="10dp"/>




</RelativeLayout>

</androidx.cardview.widget.CardView>